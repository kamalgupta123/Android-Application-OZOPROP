<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kamalk.internship.LoginActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/g"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="60px"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:text="Already signed in? Please click on databank to continue"
        android:textColor="#ff751a"
        android:textAlignment="center"
        android:layout_marginTop="30px"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Please enter your E-mail id"
        android:layout_marginTop="30px"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Please enter your Password"
        android:layout_marginTop="60px"
        android:textAlignment="center"/>



    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Else if not signed in please sign in first!"
        android:textColor="#1a1aff"
        android:textAlignment="center"
        android:layout_marginTop="30px"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90px"
        android:layout_marginTop="80px"
        android:text="DATABANK"
        />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90px"
        android:layout_marginLeft="540px"
        android:layout_marginTop="-145px"
        android:text="SIGN IN"
        />

</LinearLayout>
